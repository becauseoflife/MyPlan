<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/view_item_imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic[9]"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/view_item_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="@color/all_text_color"
            android:textStyle="bold"
            android:text="标题标题"
            />

        <TextView
            android:id="@+id/view_item_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_item_title_textView"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@color/all_text_color"
            android:textStyle="normal"
            android:text="时间时间"
             />

        <TextView
            android:id="@+id/view_item_count_down_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/view_item_date_textView"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="@color/all_text_color"
            android:textStyle="bold"
            android:text="倒计时倒计时"
            />
    </RelativeLayout>


</FrameLayout>