<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:gravity="center"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/main_menu_head_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/test1"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/main_menu_login_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_menu_head_imageView"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:text="@string/main_menu_login" />

    <TextView
        android:id="@+id/main_menu_login_tip_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_menu_login_textView"
        android:text="@string/main_menu_login_tip" />

</RelativeLayout>